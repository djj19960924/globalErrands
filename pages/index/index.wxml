<view class="main">
  <view class="topTitle">
    <span class="font_space">全</span><span class="font_space">球</span><span class="font_space">跑</span><span class="font_space">腿</span>
  </view>
  <view class="middleTitle">
    <span class="font_space">买</span>
    <span class="font_space">手</span>
    <span class="font_space">端</span>
  </view>
  <image src="../images/logo.png"></image>
  

  <input type='text' placeholder='账号' placeholder-class='input-login-text'></input>
  <input type='password' placeholder='密码' placeholder-class='input-login-text'></input>
  
  <view class="bottom_text" bindtap="showDialog">
    <span class="apply">申请买家入住</span>
  </view>

  <view class="btn_login" bindtap='login'>
    立即登录
  </view>
</view>

<view class="container" >
    <dialog id='dialog' 
      title='请输入买到情况' 
      content='+' 
      cancelText='取消' 
      confirm='确认提交'
      bind:cancelEvent="_cancelEvent"  
      bind:confirmEvent="_confirmEvent">
    </dialog>
</view>

