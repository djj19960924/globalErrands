/* pages/showDetail/showDetail.wxss */

page{
  background: #fff;
}
.main{
  padding-top:40rpx; 
}

.detail_time{
  display: flex;
  justify-content: space-between;
  color: #FFA546;
  font-size:30rpx;
  margin: 0 50rpx;
}

.btn_order{
  width: 155rpx;
  height: 55rpx;
  color: #fff;
  text-align: center;
  line-height: 55rpx;
  background: -webkit-linear-gradient(left, #6D74F2 , #ABB0FE); 
  border-radius: 10rpx;
  font-size: 30rpx;
}

.detail_avatar{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin:20rpx 50rpx 0rpx;
}
.avatar_nickname{
  text-align: center;
} 
.avatar{
  width: 260rpx;
  height: 130rpx;
  overflow: hidden;
  margin-bottom: 10rpx;
  display: flex;
  align-items: center
}
.avatar_img{
  border-radius: 50%;
  width: 115rpx;
  height: 115rpx
}
.avatarText{
  margin-left:40rpx;
}

.detail_shop{
  margin: 0 50rpx 20rpx; 
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
}

.shop_name {
  width:500rpx;
  line-height: 1.8;
  margin-top:25rpx;
  word-break:break-all;
}
.shop_picture{
  width:120rpx;
  height: 120rpx;
  border: 1px solid #E0E0E0; 
  position: relative;
}

.detail_shop:last-child{
  padding-bottom:40rpx;
}

.img{
  position: absolute;
  width: 100%;
  height: 100%;
  left:0;
  bottom:0;
  top:0;
  right:0;
  margin:auto;
}