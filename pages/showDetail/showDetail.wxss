/* pages/showDetail/showDetail.wxss */

page{
  background: #fff;
  
}
.main{
  margin-top:20rpx ;
}

.first_time{
  display: flex;
  justify-content: space-between;
  color: #FFA546;
  font-size:35rpx;
  margin: 0 40rpx;
}
.second_avatar{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx 40rpx 0;
}

.avatar-box{
  display: flex;
  width: 235rpx;
  height: 125rpx;
  justify-content: space-between;
  align-content: center;
  
}
.avatar{
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-bottom: 10rpx;
}
image{
  width: 100%;
  height: 100%
}
.nickname{
  line-height: 130rpx;
}
.btn_order{
  width: 170rpx;
  height: 60rpx;
  color: #fff;
  text-align: center;
  line-height: 60rpx;
  background: -webkit-linear-gradient(left, #6D74F2 , #ABB0FE); 
  border-radius: 10rpx;
}
.third_shop{
  height: 200rpx;
  margin: 0 40rpx; 
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 35rpx;
}
.shop_picture{
  width:120rpx;
  height: 120rpx;
  border: 1px solid #E0E0E0; 
  position: relative;
}

.third_shop:last-child{
  padding-bottom:40rpx;
}

.img{
  position: absolute;
  width: 85%;
  height: 98%;
  left:0;
  bottom:0;
  top:0;
  right:0;
  margin:auto;
}