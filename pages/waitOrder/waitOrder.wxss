page{
  background: #F5F5F5;
}
.main{
  background: #fff;
  padding-top:20rpx;
  margin-top:20rpx;
  margin-bottom:20rpx; 
}
.main:first-child{
  margin-top:0rpx
}
.main:last-child{
  margin-bottom:50rpx
}

.firstbox{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 35rpx;
  margin:0 30rpx;
}
.firstbox_time{
  color: #FFA546;
}

.btn_order{
  width: 160rpx;
  height: 60rpx;
  color: #fff;
  text-align: center;
  line-height: 60rpx;
  background: -webkit-linear-gradient(left, #6D74F2 , #ABB0FE); 
  border-radius: 10rpx;
}

.secondbox{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin:30rpx;
}
.avatar_nickname{
  text-align: center;
}
.avatar{
  width: 260rpx;
  height: 130rpx;
  overflow: hidden;
  margin-bottom: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center
}
image{
  border-radius: 50%;
  width: 130rpx;
  height: 130rpx
}
.thirdbox{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin:30rpx 30rpx 0;
  flex-direction: row;
}
.shop{
  width: 550rpx;
  font-size: 35rpx;
}
.shop_name:first-child{
  margin-top:0;
}

.shop_name{
  width:100%;
  line-height: 1.5;
  margin-top:25rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.shop_btn1{
  margin-top:25rpx;
  font-size: 35rpx;
  color:#8188FA;
  
}
.btn_detail{
  color: #767DFA;
  font-size: 60rpx;
  margin-left: 160rpx;
}

.fourthbox{
  padding-bottom: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;  
  /*  */
}

.show1{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 300rpx;
}
.showImg{
  width: 26rpx;
  height: 28rpx;
  padding-top: 30rpx;
  margin-left: 10rpx;
}
