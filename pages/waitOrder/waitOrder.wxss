page{
  background: #F5F5F5;
}
.main{
  background: #fff;
  padding-top:40rpx;
  margin-bottom:20rpx; 
}
.main:first-child{
  margin-top:0rpx
}
.main:last-child{
  margin-bottom:50rpx
}

.firstbox{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  margin:0 50rpx;
}
.firstbox_time{
  color: #FFA546;
}

.btn_order{
  width: 155rpx;
  height: 55rpx;
  color: #fff;
  text-align: center;
  line-height: 55rpx;
  background: -webkit-linear-gradient(left, #6D74F2 , #ABB0FE); 
  border-radius: 10rpx;
  font-size: 30rpx;
}

.secondbox{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin:20rpx 50rpx;
}
.avatar_nickname{
  text-align: center;
} 
.avatar{
  width: 260rpx;
  height: 130rpx;
  overflow: hidden;
  margin-bottom: 10rpx;
  display: flex;
  align-items: center
}
image{
  border-radius: 50%;
  width: 115rpx;
  height: 115rpx
}

.thirdbox{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin:0rpx 50rpx 0;
  flex-direction: row;
}
.shop{
  width: 550rpx;
  font-size: 30rpx;
}
.shop_name:first-child{
  margin-top:0;
}
.avatarText{
  margin-left:40rpx
}

.shop_name{
  width:100%;
  line-height: 1.3;
  margin-top:25rpx;
  text-overflow:ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  word-break:break-all;
}

.shop_btn1{
  margin-top:25rpx;
  font-size: 30rpx;
  color:#8188FA;
  
}
.btn_detail{
  color: #767DFA;
  font-size: 60rpx;
  margin-left: 160rpx;
}

.fourthbox{
  padding-bottom: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;  
}

.show1{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 300rpx;
}
.showImg{
  width: 26rpx;
  height: 28rpx;
  padding-top: 30rpx;
  margin-left: 10rpx;
}
