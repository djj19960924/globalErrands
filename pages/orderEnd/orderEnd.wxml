<view class="main">
  <view class="top_bg">
    <view class="top_text">
      <view class="text-buy">采购辛苦了~</view>
      <view class="text-buy">已经完成那么多订单</view>
    </view>
    <view class="top_img">
      <image class="img" src='../images/orderEndbg.png'></image>
    </view>
  </view>

  <view class="content" wx:for="{{list}}" wx:key="{{index}}">
    <view class="firstbox">
      <view class="firstbox_time">
        <view class="time_date">2019-07-02 10:10</view>
      </view>
      <view class="firstbox_time time_wait">已等待2天</view>
