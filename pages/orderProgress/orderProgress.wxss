/* pages/orderProgress/orderProgress.wxss */
page{
  background: #F5F5F5;
}

.top_progress{
  padding-top: 40rpx;
  margin-bottom: 20rpx;
  background: #fff;
}
.firstbox{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  margin:0 30rpx;
}
.firstbox_time{
  color: #FFA546;
}

.btn_order{
  width: 160rpx;
  height: 60rpx;
  color: #fff;
  text-align: center;
  line-height: 60rpx;
  background: -webkit-linear-gradient(left, #6D74F2 , #ABB0FE); 
  border-radius: 10rpx;
}

.secondbox{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin:20rpx 30rpx;
}
.avatar_nickname{
  text-align: center;
}
.avatar{
  width: 260rpx;
  height: 130rpx;
  overflow: hidden;
  margin-bottom: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center
}
.avatarImg{
  border-radius: 50%;
  width: 130rpx;
  height: 130rpx
}

.thirdbox{
  display: flex;
  justify-content: space-between;
  margin:30rpx 30rpx 0;
  flex-direction: row;
  align-items: center
}
.thirdbox-main{
  margin-bottom: 10rpx;
}
.shop{
  width: 690rpx;
  font-size: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top:10rpx;
}

.shop-unbuy{
  color:#8188FA;
}


.shop_name{
  width:490rpx;
  line-height: 1.8;
  text-overflow:ellipsis;
  word-break:break-all;
}

.fourthbox{
  padding-bottom: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;  
}

.show1{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 300rpx;
}
.show1 .shop_btn1{
    color: #8188FA;
    font-size: 30rpx; 
}
.showImg{
  width: 26rpx;
  height: 28rpx;
  margin-left: 10rpx;
}

.bottom_progress{
  background: #fff;
  margin-top:20rpx; 
  padding-bottom: 50rpx;
}

.noShop{
  padding:20rpx;
}

.third_shop{
  margin:0 30rpx;
  height: 175rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx; 
}
.shop_picture{
  width:100rpx;
  height: 100rpx;
  border: 1px solid #E0E0E0; 
  position: relative;
  top:30rpx;
}
.img{
  position: absolute;
  width: 100%;
  height: 100%;
  left:0;
  bottom:0;
  top:0;
  right:0;
  margin:auto;
}

.progress_over{
  width:445rpx;
  height:80rpx;
  background: -webkit-linear-gradient(left, #757BFA , #ADB2FE);  
  margin: 60rpx auto 0;
  text-align: center;
  line-height: 80rpx;
  color: #fff;
  font-size: 30rpx;
  border-radius: 10rpx;
}
.progress_time{
  font-size: 30rpx;
  margin-top:15rpx;
  
}

.addTips{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  box-sizing: content-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0.7;
  z-index: 5;
  background-color: #000;
  background-attachment: fixed;
  background-repeat: no-repeat;
  background-size: 100% 100%;
}
.tips {
  position: fixed;
  border-radius: 5rpx;
  width:580rpx;
  height: 485rpx;
  background: #fff;
  
  z-index: 10;
}

.tips-top {
  height: 106rpx;
  background: #A6ACFE;
  line-height: 106rpx;
  text-align: center;
  color: #fff;
  font-size: 38rpx;
}
.tip-img{
  height: 150rpx;
  display: flex;
  align-items: center;
  
}
.star{
  width: 50rpx;
  color: #FF1111;
  font-size: 38rpx;
  text-align: center;
}
.tip-imgUpdate{
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #F2F2F2; 
  height: 150rpx;
  width: 480rpx;
}
.tip-imgUpdate image{
  width: 96rpx;
  height: 96rpx;
}
.tip-updateText{
  font-size: 28rpx;
  margin-left:10rpx;
}
.tip-content{
  margin:40rpx 50rpx 0rpx;
  font-size:30rpx;
  width: 480rpx;
  height:  86rpx;
}
textarea{
  width: 100%;
  height: 100%;
  word-wrap:break-word;
}
.tip-btn{
  margin:0 50rpx;
  display: flex;
  line-height: 80rpx;
  text-align: center;
}
.tip-cancel{
  width: 210rpx;
  height: 80rpx;
  border: 1rpx solid #E5E5E5;
  margin-right:60rpx; 
  color: #000
}
.tip-sumbit{
  width: 210rpx;
  height: 80rpx;
  border: 1rpx solid #878CE2;
  background: #878CE2;
  color: #FFF;
  
}
.addTips .close-mask {
  position: relative;
  width: 80rpx;
  height: 80rpx;
  z-index: 10;
}