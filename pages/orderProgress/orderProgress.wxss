/* pages/orderProgress/orderProgress.wxss */
page{
  background: #F5F5F5;
}
.main{
  
  padding-top:20rpx;
}
.top_progress{
  margin-bottom: 20rpx;
  background: #fff;
}
.firstbox{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 35rpx;
  margin:0 30rpx;
}
.firstbox_time{
  color: #FFA546;
}

.btn_order{
  width: 160rpx;
  height: 60rpx;
  color: #fff;
  text-align: center;
  line-height: 60rpx;
  background: -webkit-linear-gradient(left, #6D74F2 , #ABB0FE); 
  border-radius: 10rpx;
}

.secondbox{
  margin-top:10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin:0 30rpx;
  padding-bottom: 30rpx; 
}
.avatar_nickname{
  text-align: center;
}
.avatar{
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-bottom: 10rpx;
}
image{
  width: 100%;
  height: 100%
}

.shop{
  font-size: 35rpx;
  position: relative;
}
.shop_name{
  margin-top:25rpx;
}
.shop_name1{
  margin-top:15rpx;
}
.shopName{
  margin-right:180rpx;
}
.unbuy{
  position: absolute;
  right: 0 
}
.buy{
  position: absolute;
  right: 0 ;
  color:#8188FA;
}

.shop_btn1{
  color:#8188FA;
  margin-top:20rpx;
}
.btn_detail{
  color: #767DFA;
  font-size: 65rpx;
}

.bottom_progress{
  background: #fff;
  margin-top:20rpx; 
  padding-bottom: 50rpx;
}

.third_shop{
  margin:0 30rpx;
  height: 175rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 35rpx; 
}
.shop_picture{
  width:100rpx;
  height: 100rpx;
  border: 1px solid #E0E0E0; 
  position: relative;
}
.img{
  position: absolute;
  width: 100%;
  height: 100%;
  left:0;
  bottom:0;
  top:0;
  right:0;
  margin:auto;
}

.progress_over{
  width:445rpx;
  height:90rpx;
  background: -webkit-linear-gradient(left, #757BFA , #ADB2FE);  
  margin: 60rpx auto 0;
  text-align: center;
  line-height: 90rpx;
  color: #fff;
  font-size: 35rpx;
  border-radius: 10rpx;
}
.progress_time{
  font-size: 35rpx;
  margin-top:15rpx;
}