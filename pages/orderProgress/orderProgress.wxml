<!--pages/orderProgress/orderProgress.wxml-->
<view class="main">
  <view class="top_progress">
    <view class="firstbox">
      <view class="firstbox_time">
        <view class="time_date">{{orderReceivedDetail.createTime}}</view>
      </view>
      <view class="firstbox_time time_wait">已等待{{orderReceivedDetail.waitTime}}天</view>
    </view>

    <view class="secondbox">
      <view class="avatar_nickname">
        <view class="avatar">
          <image src="{{orderReceivedDetail.headImgurl}}" class="avatarImg"></image>
          <text class="avatarText">{{orderReceivedDetail.nickName}}</text>
        </view>
      </view>
    </view>

    <view class="thirdbox" wx:if="{{orderReceivedDetail.itemList.length<5||orderReceivedDetail.itemList.length===5}}">
      <view class="thirdbox-main">
        <view class="shop" wx:for="{{orderReceivedDetail.itemList}}" wx:for-item="itemList" wx:key="{{index}}">
          <view class="shop_name">
            <text>{{itemList.productName?itemList.productName:'无'}}</text>
          </view>
          <view class="shop-unbuy" wx:if="{{!itemList.status}}">
            <text>买到</text>
          </view>
          <view class="shop-buy" wx:else>
            <text>已买到</text>
          </view>
        </view>
        
      </view>
    </view>

    <view class="thirdbox" wx:else>
      <view class="thirdbox-main">
        <view class="shop" wx:for="{{orderReceivedDetail.openList}}" wx:for-item="itemList" wx:key="{{index}}">
          <view class="shop_name">
            <text>{{itemList.productName}}</text>
          </view>
          <view class="shop-unbuy" wx:if="{{!itemList.status}}">
            <text>买到</text>
          </view>
          <view class="shop-buy" wx:else>
            <text>已买到</text>
          </view>
        </view>

        <view wx:if="{{!orderReceivedDetail.status}}" class="shop" wx:for="{{orderReceivedDetail.hiddenOrderReceivedList}}" wx:key="{{index}}" wx:for-item="hiddenList">
          <view class="shop_name">
            <text>{{hiddenList.productName}}</text>
          </view>
          <view class="shop-unbuy" wx:if="{{!hiddenList.status}}">
            <text>买到</text>
          </view>
          <view class="shop-buy" wx:else>
            <text>已买到</text>
          </view>
        </view>
      </view>
    </view>

    <view class="fourthbox" wx:if="{{orderReceivedDetail.itemList.length>5}}"  >
      <view class="show1" bindtap='show' wx:if="{{orderReceivedDetail.status}}">
        <view class="shop_btn1">
          点击展开
        </view>
        <image class="showImg" src="../images/showIcon.png"></image>
      </view>

      <view class="show1" bindtap='show' wx:else>
        <view class="shop_btn1">
          收起
        </view>
        <image class="showImg" src="../images/hidden.png"></image>
      </view>

    </view>

  </view>

  <view class="bottom_progress">
    <view class="third_shop" wx:for="{{list}}" wx:key="{{index}}">
      <view class="shop_name">
        <view class="progress_time firstbox_time">2019-07-02 18:10</view>
        <view class="progress_time">黛珂紫苏水300ml*1已买到</view>
      </view>
      <view class="shop_picture">
        <image class="img" src="../images/avatar.png"></image>
      </view>
    </view>
    <view class="progress_over" bindtap="btnclick">
      采购结束
    </view>
  </view>


  <view wx:if='{{isbtn}}' class='addTips' catchtouchmove='preventTouchMove'>
    <view class='mask' />
    <view class="tips">
      <view class="tips-top">
        填写进度
      </view>
      <view class="tip-img">
        <view class="star">*</view>
        <view class="tip-imgUpdate">
          <image src="../images/addImg.png"></image>
          <view class="tip-updateText">
            (上传图片)
          </view>
        </view>

      </view>

      <view class="tip-content">
        <textarea placeholder="请输入买到情况"></textarea>
      </view>
      <view class="tip-btn">
        <view class="tip-cancel">取消</view>
        <view class="tip-sumbit">确认提交</view>
      </view>
    </view>

  </view>
</view>